<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <OutputType>Library</OutputType>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Views\**\*.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.1.3" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" Version="2.1.3" />
  </ItemGroup>

  <!-- Include the Prise project references -->
  <ItemGroup>
    <ProjectReference Include="../../../src/Prise.Plugin/Prise.Plugin.csproj" />
    <ProjectReference Include="../../../src/Prise.PluginBridge/Prise.PluginBridge.csproj" />
    <ProjectReference Include="../../Prise.Example.Contract/Prise.Example.Contract.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="Views\**\*.cshtml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
